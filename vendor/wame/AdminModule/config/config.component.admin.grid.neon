services:
    # Events
    - {class: Wame\ComponentModule\Vendor\Wame\AdminModule\Events\ComponentFormListener, tags: [run]}

    ComponentGrid:
        class: Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\ComponentGrid
        setup:
            - add(Wame\DataGridControl\Columns\Id())
            - add(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\Component\Type())
            - add(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\Component\TitleLink())
            - add(Wame\DataGridControl\Columns\Name())
            - add(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\Component\Status())
            - add(Wame\DataGridControl\Actions\Delete())
            - add(Wame\DataGridControl\ToolbarButtons\Add())

    CreateComponentGrid:
        class: Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\CreateComponentGrid
        setup:
            - add(Wame\DataGridControl\Columns\Name())
            - add(Wame\DataGridControl\Columns\Description())

    ComponentInPositionGrid:
        class: Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\ComponentInPositionGrid
        setup:
            - add(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentId())
            - add(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentInPosition\Type())
            - add(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentInPosition\TitleLink())
            - add(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentName())
            - add(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentStatus())
            - add(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentInPosition\Delete())

    PositionGrid:
        class: Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\PositionGrid
        setup:
            - add(Wame\DataGridControl\Columns\Id())
            - add(Wame\DataGridControl\Columns\Name())
            - add(Wame\DataGridControl\Columns\TitleLinkEdit())
            - add(Wame\DataGridControl\Columns\Description())
            - add(Wame\DataGridControl\Actions\Delete())