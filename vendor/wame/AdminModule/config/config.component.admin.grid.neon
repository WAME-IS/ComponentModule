services:
    # Events
    - {class: Wame\ComponentModule\Vendor\Wame\AdminModule\Events\ComponentFormListener, tags: [run]}

    ComponentGrid:
        class: Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\ComponentGrid
        setup:
            - addColumn(Wame\DataGridControl\IdGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\Component\TypeGridColumn())
#            - addColumn(Wame\DataGridControl\TitleGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\Component\TitleLinkGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\Component\NameGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\Component\StatusGridColumn())
#            - addColumn(Wame\DataGridControl\EditGridAction())
            - addColumn(Wame\DataGridControl\DeleteGridAction())

    CreateComponentGrid:
        class: Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\CreateComponentGrid
        setup:
            - addColumn(Wame\DataGridControl\NameGridColumn())
            - addColumn(Wame\DataGridControl\DescriptionGridColumn())

    ComponentInPositionGrid:
        class: Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\ComponentInPositionGrid
        setup:
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentInPosition\IdGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentInPosition\TypeGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentInPosition\TitleLinkGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentInPosition\NameGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentInPosition\StatusGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentInPosition\DeleteGridAction())

    PositionGrid:
        class: Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\PositionGrid
        setup:
            - addColumn(Wame\DataGridControl\IdGridColumn())
            - addColumn(Wame\DataGridControl\NameGridColumn())
            - addColumn(Wame\DataGridControl\TitleLinkGridColumn())
            - addColumn(Wame\DataGridControl\DescriptionGridColumn())
#            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\StatusGridColumn())
            - addColumn(Wame\DataGridControl\DeleteGridAction())