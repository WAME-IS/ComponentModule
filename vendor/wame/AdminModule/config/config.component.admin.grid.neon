services:
    # Events
    - {class: Wame\ComponentModule\Vendor\Wame\AdminModule\Events\ComponentFormListener, tags: [run]}

    ComponentGrid:
        class: Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\ComponentGrid
        setup:
            - addColumn(Wame\DataGridControl\IdGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\TypeGridColumn())
#            - addColumn(Wame\DataGridControl\TitleGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\TitleLinkGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\NameGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\StatusGridColumn())
#            - addColumn(Wame\DataGridControl\EditGridAction())
            - addColumn(Wame\DataGridControl\DeleteGridAction())

    CreateComponentGrid:
        class: Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\CreateComponentGrid
        setup:
            - addColumn(Wame\DataGridControl\NameGridColumn())
            - addColumn(Wame\DataGridControl\DescriptionGridColumn())

    ComponentInPositionGrid:
        class: Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\ComponentInPositionGrid
        setup:
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentInPositionGrid\IdGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentInPositionGrid\TypeGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentInPositionGrid\TitleLinkGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentInPositionGrid\NameGridColumn())
            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\ComponentInPositionGrid\StatusGridColumn())
            - addColumn(Wame\DataGridControl\DeleteGridAction())

    PositionGrid:
        class: Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\PositionGrid
        setup:
            - addColumn(Wame\DataGridControl\IdGridColumn())
            - addColumn(Wame\DataGridControl\NameGridColumn())
            - addColumn(Wame\DataGridControl\TitleLinkGridColumn())
            - addColumn(Wame\DataGridControl\DescriptionGridColumn())
#            - addColumn(Wame\ComponentModule\Vendor\Wame\AdminModule\Grids\Columns\StatusGridColumn())
            - addColumn(Wame\DataGridControl\DeleteGridAction())