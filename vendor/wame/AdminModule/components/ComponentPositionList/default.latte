{if count($componentPositionList) == 0}
	<div class="empty-block">
        <p>{_'This component is not added to any position.'}</p>
        
        <a href="{plink ComponentPosition:create}" class="btn btn-success btn-lg ajax-modal ajax-modal-fixed">
            <span class="material-icons">add_circle_outline</span>
            {_'Add to position'}
        </a>
	</div>
{else}
    <ul class="collection with-header z-depth-3">
        <li class="collection-header">
            <div class="row">
                <div class="col-xs-9 valign-wrapper">
                    <span class="valign">{_'This component is use also'}:</span>
                </div>
                <div class="col-xs-3 border-left text-right">
                    <a href="{plink ComponentPosition:create}" class="btn btn-link tooltipped ajax-modal ajax-modal-fixed" data-position="left" data-tooltip="{_'Add to position'}">
                        <span class="material-icons">add_circle_outline</span>
                    </a>
                </div>
            </div>
        </li>
        
        <li class="collection-item dismissable" n:foreach="$componentPositionList as $componentPosition">
            <div class="row">
                <div class="col-xs-9">
                    {var $position = $componentPosition->position}
                    <a href="{plink ComponentPosition:edit, 'id' => $componentPosition->id}">
                        <span class="title truncate">{$position->title}</span>
                    </a>
                    
                    <a class="link-dark link-hover-secondary" href="{plink Position:show, 'id' => $position->id}">
                        <small>[{$position->name}]</small>
                    </a>
                    
                    {if $position->description}
                        <br>
                        <small>
                            {$position->description}
                        </small>
                    {/if}
                </div>
                
                <div class="col-xs-3 text-right">
                    <a href="{plink ComponentPosition:delete, 'id' => $componentPosition->id}" class="secondary-content btn btn-icon btn-hover-danger tooltipped ajax-modal" data-position="left" data-tooltip="{_'Remove from this position'}">
                        <i class="material-icons">delete</i>
                    </a>
                </div>
            </div>
        </li>
    </ul>
{/if}