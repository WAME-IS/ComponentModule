{block content}
	<div class="page-header">
		<div class="row">
			<div class="col-md-8">
				<h1>
					{$siteTitle}
					<small>
						<span class="fa fa-angle-right"></span>
						{$componentTitle}
						<span class="fa fa-angle-right"></span>
						{$positionTitle}
					</small>
				</h1>
			</div>
					
			<div class="col-md-4 text-right">
                <a class="btn btn-danger ajax-modal" n:href="Component:removeFromPosition">
                    <span class="fa fa-trash-o"></span>
                    {_'Remove from this position'}
                </a>
            </div>
		</div>
	</div>
	
	<div class="alert alert-info">
		<span class="fa fa-info-circle"></span>
		{_'This data overload the settings of the main component.'}
	</div>
	
	{control componentPositionForm}