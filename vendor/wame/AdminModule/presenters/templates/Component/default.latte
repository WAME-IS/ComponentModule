{block content}
	<div class="page-header">
		<h1>{$siteTitle}</h1>
	</div>

	<div class="row">
		<div class="col-md-8 col-lg-9">
			<a n:if="count($components) > 0" class="btn btn-success pull-right" n:href=":Admin:Component:create, 'id' => null">
				<span class="fa fa-plus"></span>
				{_'Add component'}
			</a>

			{if count($components) == 0}
				<div class="lead text-muted">{_'You do not have created any components.'}</div>
				<a class="btn btn-success" n:href=":Admin:Component:create, 'id' => null">{_'Add first component'}</a>
			{else}
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>{_'Type'}</th>
							<th>{_'Title'}</th>
							<th>{_'Name'}</th>
							<th>{_'Status'}</th>
							<th></th>
						</tr>
					</thead>

					<tbody>
						<tr n:foreach="$components as $component" n:if="isset($componentManager[$component->type])">
							<td>
								{$component->id}
							</td>
							
							<td>
								<span class="{$componentManager[$component->type]->getIcon()}" title="{$componentManager[$component->type]->getTitle()}"></span>
							</td>

							<td>
								<div><a href="{$componentManager[$component->type]->getLinkDetail($component)}">{$component->langs[$lang]->title}</a></div>
								<small n:if="$component->langs[$lang]->description" class="text-muted">{$component->langs[$lang]->description}</small>
							</td>

							<td>
								{$component->name}
							</td>

							<td>
								{if $component->status == 1}
									<span class="label label-success">{_'Enabled'}</span>
								{elseif $component->status == 2}
									<span class="label label-danger">{_'Disabled'}</span>
								{/if}
							</td>

							<td class="text-right">
								<a class="btn btn-sm btn-warning" href="{$componentManager[$component->type]->getLinkDetail($component)}"><span class="fa fa-edit"></span></a>
								<a class="btn btn-sm btn-danger" n:href=":Admin:Component:delete, 'id' => $component->id"><span class="fa fa-trash-o"></span></a>
							</td>
						</tr>
					</tbody>
				</table>
			{/if}
		</div>
		
		<div class="col-md-4 col-lg-3">
			{control positionList}
		</div>
	</div>
	