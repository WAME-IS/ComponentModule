{block content}

<div class="card-panel no-shadow">
    <div class="row">
        <div class="col-md-8 col-lg-9">
            {if $count == 0}
                <div class="empty-block">
                    <p>{_'You do not have created any components.'}</p>
                    <a class="btn btn-success btn-lg" n:href=":Admin:Component:create, 'id' => null">
                        <i class="material-icons">add_circle_outline</i>
                        {_'Add first component'}
                    </a>
                </div>
            {else}
                {control componentGrid}
            {/if}
        </div>

        <div class="col-md-4 col-lg-3">
            {control positionList}
        </div>
    </div>
</div>
