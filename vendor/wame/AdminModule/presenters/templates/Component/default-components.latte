<table class="table">
	<thead>
		<tr>
			<th>#</th>
			<th>{_'Title'}</th>
			<th>{_'Name'}</th>
			<th>{_'Status'}</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<tr n:foreach="$components as $component">
			<td>
				{$component->id}
			</td>

			<td>
				<div><a n:href=":Admin:Component:update, 'id' => $component->id">{$component->langs[$lang]->title}</a></div>
				<small n:if="$component->langs[$lang]->description" class="text-muted">{$component->langs[$lang]->description}</small>
			</td>

			<td>
				{$component->name}
			</td>

			<td>
				{if $component->status == 1}
					<span class="label label-success">{_'Enabled'}</span>
				{elseif $component->status == 2}
					<span class="label label-danger">{_'Disabled'}</span>
				{/if}
			</td>

			<td class="text-right">
				<a class="btn btn-sm btn-warning" n:href=":Admin:Component:update, 'id' => $component->id"><span class="fa fa-edit"></span></a>
				<a class="btn btn-sm btn-danger ajax-modal" n:href=":Admin:Component:delete, 'id' => $component->id"><span class="fa fa-trash-o"></span></a>
			</td>
		</tr>
	</tbody>
</table>