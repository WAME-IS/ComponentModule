{block siteTitle}
    <h1>
        {$siteTitle} {$position->title}
        
        <small>
            <span class="material-icons">chevron_right</span>
            {$position->title}
        </small>
    </h1>
{/block}

{block content}          
<div class="card-panel white no-margin text-right">
    <a class="{$position->status == 1 ? 'label label-success' : 'label label-danger'}" n:href="ChangeStatus!">
        {$positionStatusList[$position->status]}
    </a>
    <a class="btn btn-icon btn-hover-warning tooltipped ajax-modal ajax-modal-fixed" data-position="left" data-tooltip="{_'Edit position'}" n:href=":Admin:Position:update, 'id' => $position->id">
        <span class="material-icons">edit</span>
    </a>
    <a class="btn btn-icon btn-hover-danger tooltipped ajax-modal" data-position="left" data-tooltip="{_'Delete position'}" n:href=":Admin:Position:delete, 'id' => $position->id">
        <span class="material-icons">delete</span>
    </a>
</div>

<div class="card-panel no-shadow">
    <div class="row">
        <div class="col-md-8 col-lg-9">
            {if count($components) == 0}
                <div class="empty-block">
                    <p>{_'You do not have created any components in this position.'}</p>

                    <a class="btn btn-success btn-large" n:href=":Admin:Component:create, 'id' => $id">
                        <i class="material-icons">add_circle_outline</i>
                        {_'Add first component'}
                    </a>
                </div>
            {else}
                {control componentInPositionGrid}
            {/if}
        </div>

        <div class="col-md-4 col-lg-3">
            {control positionList}
        </div>
    </div>
</div>
	