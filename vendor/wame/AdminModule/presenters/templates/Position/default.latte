{block content}

{if count($positions) == 0}
    <div class="empty-block">
        <p>{_'You do not have created any positions yet.'}</p>

        <a class="btn btn-success btn-lg" n:href=":Admin:Position:create, 'id' => $id">
            <i class="material-icons">add_circle_outline</i>
            {_'Create first position'}
        </a>
    </div>
{else}
    {control positionGrid}
{/if}
	